{% for block in section.blocks %}

<img src = "{{ block.settings.image | img_url: 'master' }}" />

{%endfor%}


<h3>
{{section.settings.heading}}
</h3>
<p>
{{section.settings.description}}
</p>


{% schema %}
  {
    "name": "icons with text above",
    "settings": [
				{
				"type": "text",
				"label": "your headline for the section",
				"id": "heading"
				},
				{
				"type": "richtext",
				"label": "your decritiption",
				"id": "description"
				}
				],
	"blocks": [
				{
				"type": "image",
				"name": "image block",
				"settings": [
							{
							"type": "image_picker",
							"label": "your image",
							"id": "image" 
							}
							]
				}
				]

  }
{% endschema %}

